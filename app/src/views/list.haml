!!!
%html{lang: "fr"}
  %head
    %meta{charset: "utf-8"}
    %meta{content: "width=device-width, initial-scale=1, shrink-to-fit=no", name: "viewport"}
    %meta{content: "", name: "description"}
    %meta{content: "", name: "author"}
    %title List Event - S'enregistrer
    / Bootstrap core CSS
    %link{href: "public/css/main.min.css", rel: "stylesheet"}
    %link{href: "public/css/bootstrap.min.css", rel: "stylesheet"}
  %body
    / Navigation
    %nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
      .container
        %a.navbar-brand{href: "#"} List Event
        %button.navbar-toggler{"aria-controls": "navbarResponsive", "aria-expanded": "false", "aria-label": "Toggle navigation", "data-target": "#navbarResponsive", "data-toggle": "collapse", type: "button"}
          %span.navbar-toggler-icon
        #navbarResponsive.collapse.navbar-collapse
          %ul.navbar-nav.ml-auto
            %li.nav-item
              %a.nav-link{href: "/"} Home
            %li.nav-item
              %a.nav-link{href: "/register"} S'enregistrer
            %li.nav-item.active
              %a.nav-link{href: "/list"}
                Liste des participants
                %span.sr-only (current)
    / Page Content
    .container
      .row
        .col-lg-12
          %h1.mt-5 Liste des enregistrements
          %form#form_delete
            %table#list_users.table
              %thead
                %tr
                  %th{scope: "col"} #
                  %th{scope: "col"} Prénom
                  %th{scope: "col"} Nom
                  %th{scope: "col"} Adresse
                  %th{scope: "col"} Pseudo
                  %th{scope: "col"} Email
              %tbody#tbody_table_users
            %button#btn_select_all.btn.btn-primary{type: "button"} Tout sélectionner
            %button.btn.btn-primary{type: "submit"} Supprimer
    / Bootstrap core JavaScript
    %script{src: "public/js/popper/popper.min.js"}
    %script{src: "public/js/jquery.min.js"}
    %script{src: "public/js/bootstrap.min.js"}
    %script{src: "public/js/list.min.js"}
